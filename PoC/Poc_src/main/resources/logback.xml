<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d %-5level %-50logger{50} - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="it.qbsoftware" level="INFO"/>
  <logger name="org.eclipse.jetty" level="INFO"/>

  <root level="INFO">
    <appender-ref ref="STDOUT" />
  </root>

</configuration>